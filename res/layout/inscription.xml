<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
       android:background="@drawable/detective"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/id_imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_launcher" />

        </RelativeLayout>

        <Button
            android:id="@+id/id_inscription"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp"
           
            android:background="@drawable/inscription" />

        <EditText
            android:id="@+id/id_telephone"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_email"
            android:layout_below="@+id/id_email"
             android:background="@drawable/theme" 
            android:hint="telephone" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_telephone"
            android:layout_alignRight="@+id/id_telephone"
            android:layout_below="@+id/id_telephone"
             android:background="@drawable/theme" 
            android:hint="adresse" />

        <EditText
            android:id="@+id/id_nom"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/theme"
            android:hint="nom" />

        <EditText
            android:id="@+id/id_prenom"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_nom"
            android:layout_below="@+id/id_nom"
            android:background="@drawable/theme"
            android:hint="prenom" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/id_password"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_prenom"
            android:layout_below="@+id/id_prenom"
            android:background="@drawable/theme"
            android:hint="@string/motdepasse" />

        <EditText
            android:id="@+id/id_email"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/id_password"
            android:layout_below="@+id/id_password"
            android:background="@drawable/theme"
            android:ems="10"
            android:hint="email" />

    </RelativeLayout>

</ScrollView>