<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="#a00040" />

            <stroke android:width="1dp" android:color="#a00040" />

            <corners android:radius="0dp" />

            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#f3e9fa" android:startColor="#f3e9fa" />

            <stroke android:width="1dp" android:color="#a00040" />

            <corners android:radius="0dp" />

            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp" />
        </shape></item>

</selector>